<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Thingstosee3nights">

    <ImageView
        android:id="@+id/imgCozumel"
        android:layout_width="170dp"
        android:layout_height="120dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleGeorgeTown"
        app:srcCompat="@drawable/cozumel" />

    <TextView
        android:id="@+id/txtTitleCozumel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cozumel, Mexico"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="117dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="In Nassau's famed Old Town,\nyou’ll find the city's Parliament\nBuilding. This structure is pain-\nted a unique shade of pink and\nhelmed by a statue of Queen \nVictoria—a remnant and remin-\nder of the island's British colo-\n"
        app:layout_constraintStart_toEndOf="@+id/imgGeorgeTown"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleCozumel" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="367dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="nial past. A tour around the island—paid or self-guided—will reveal interesting old forts to explore, including the historic Fort Fincastle."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imgGeorgeTown"
        android:layout_width="179dp"
        android:layout_height="115dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTitleCozumel"
        app:srcCompat="@drawable/georgetown" />

    <TextView
        android:id="@+id/txtTitleGeorgeTown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="George Town, Grand Cayman"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="32dp"
        android:text="In Nassau's famed Old Town,\nyou’ll find the city's Parliament\nBuilding. This structure is pain-\nted a unique shade of pink and\nhelmed by a statue of Queen \nVictoria—a remnant and remin-\nder of the island's British colo-\n"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnCozumel" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="367dp"
        android:layout_height="59dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="nial past. A tour around the island—paid or self-guided—will reveal interesting old forts to explore, including the historic Fort Fincastle."
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgCozumel" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="381dp"
        android:layout_height="50dp"
        android:background="@drawable/gradientdream"
        android:gravity="center_horizontal"
        android:text="Disney Dream\n---7 Nights---"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCozumel"
        android:layout_width="wrap_content"
        android:layout_height="39dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:text="What to See >>>"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/txtTitleGeorgeTown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/btnGeorge"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="What to See >>>"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.6" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Same as 3 and 5 nights PLUS:"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:layout_editor_absoluteX="8dp" />
</android.support.constraint.ConstraintLayout>